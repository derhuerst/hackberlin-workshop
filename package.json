{
  "private": true,
  "name": "hackberlin-workshop",
  "description": "A workshop on building Frontend apps.",
  "version": "0.1.0",
  "keywords": [
    "hackathon",
    "workshop",
    "demo",
    "berlin"
  ],
  "author": "Jannis R <mail@jannisr.de>",
  "homepage": "http://derhuerst.github.io/hackberlin-workshop/",
